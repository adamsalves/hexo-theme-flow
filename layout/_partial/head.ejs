<%
  var title = page.title;

  if (is_archive()){
    title = 'Archives';

    if (is_month()){
      title += ': ' + page.year + '/' + page.month;
    } else if (is_year()){
      title += ': ' + page.year;
    }
  } else if (is_category()){
    title = 'Category: ' + page.category;
  } else if (is_tag()){
    title = 'Tag: ' + page.tag;
  }
%>
<head>
  <meta charset="utf-8">
  <title><% if(title) { %><%= title %> | <% } %> <%= config.title %> | <%= config.subtitle %></title>
  <meta name="author" content="<%= config.author %>">
  <meta name="description" content="<%= config.subtitle %>">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320">
  <meta name="keywords" content="javascript, html, html5, css, css3, frontend, web" />

  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@<%= theme.twitter %>">
  <meta name="twitter:creator" content="@<%= theme.twitter %>">
  <meta name="twitter:url" content="<%= config.url %>">
  <meta name="twitter:title" content="Blog do <%= config.title %>">
  <meta name="twitter:description" content="<%= config.subtitle %>">

  <link href='//fonts.googleapis.com/css?family=Raleway:400,300,600' rel='stylesheet' type='text/css'>
  <%- css('lib/css/bulma.css') %>
  <%- css('lib/css/font-awesome.css') %>
  <%- css('lib/css/style.css') %>
</head>
