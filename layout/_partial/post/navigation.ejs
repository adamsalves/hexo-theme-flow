        <a class="newer-posts" href="<%- url_for(page.prev.path) %>">
          <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
  <%- page.prev.title %>
        </a>
      </div>
    <% } %>
    <div class="bullet column is-one-quarter">
      <span class="page-number">â€¢</span>
    </div>
    <% if (page.next) { %>
